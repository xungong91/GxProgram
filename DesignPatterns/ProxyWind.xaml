<Window x:Class="DesignPatterns.ProxyWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProxyWind" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="341*"/>
        </Grid.RowDefinitions>
        <TextBox Name="tb" Height="24" HorizontalAlignment="Left" Width="300"/>
        <Button Click="Button_Click_1" Content="查看图片" Width="60" HorizontalAlignment="Right" Height="24"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.RowSpan="2">
            <WrapPanel Name="wrapPanel">
                
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
