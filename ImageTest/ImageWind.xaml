<Window x:Class="ImageTest.ImageWind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageWind" Height="350" Width="500">
    <Grid Background="Orange">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <ProgressBar Maximum="1" Minimum="0" Name="progressbar"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <TextBlock Name="tbfilename"  VerticalAlignment="Center" Text="sadasdasd"/>
            <TextBlock Name="tbjindu" Margin="50,0,0,0" VerticalAlignment="Center" Text="sadassssdasd"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Image Name="inimage" Height="200" Width="200"/>
            <Image Margin="50,0,0,0" Name="outimage" Height="200" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
