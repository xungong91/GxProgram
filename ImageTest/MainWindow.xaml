        <StackPanel>
            <StackPanel.RenderTransform>
                <ScaleTransform CenterX="250" ScaleX="2" ScaleY="2"/>
            </StackPanel.RenderTransform>
            <TextBox Name="txt1" Width="150" TextWrapping="Wrap"/>
            <TextBox Name="txt2" Width="150" TextWrapping="Wrap"/>
